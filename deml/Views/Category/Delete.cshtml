@model Category

<form method="post">
    <input asp-for="CategoryId" hidden />
    <div class="mt-4 border p-3">
        <div class="row pb-2 ">
            <h2 class="text-primary">
                Delete new Category
            </h2>
        </div>
        <div class="row pb-1">
            <label>Category name</label>
            <input asp-for="name" class="form-control" disabled/>
        </div>
        <div class="row pb-1">
            <label>Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
        </div>
        <div class="row mt-3">
            <div class="col-6 col-md-3 ">
                <button type="submit" class="btn btn-danger form-control" >Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back to category</a>
            </div>
        </div>
    </div>
</form>
