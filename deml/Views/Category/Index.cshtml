@model List<Category>
<partial name="_Notification" />
<div class="container">
    <div class="row pt-3 pb-5">
        <div class="col-6 text-primary">
            Category List
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class=" btn btn-primary"><i class="bi bi-patch-plus"></i>Create new category</a>
        </div>
    </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        category name
                    </th>
                    <th>
                        display sorder
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(o => o.DisplayOrder))
                {
                    <tr>
                        <td>@obj.name</td>
                         <td>@obj.DisplayOrder</td>
                        <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id=@obj.CategoryId class="btn btn-primary mx-2">
                                <i class="bi bi-pen"></i> edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                            </div>
                           
                        </td>
                       
                    </tr>
                }
            </tbody>
        </table>


</div>