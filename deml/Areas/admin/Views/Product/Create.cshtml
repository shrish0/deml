@model Product
<div class="card shadow mt-4 border-0">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3 ">
        <div class="row">
            <div class=" text-center col-12">
                <h2 class="text-white py-2">
                    Create new Product
                </h2>
            </div>

        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">

            <div class="border p-3">
                <div class="row pb-2 ">

                    <div class="py-2 col-12">
                        <label class="ms-2">Tittle</label>
                        <input asp-for="Title" class="form-control border-0 shadow" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label class="ms-2">Description</label>
                        <input asp-for="Description" class="form-control border-0 shadow" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label class="ms-2">ISBN</label>
                        <input asp-for="ISBN" class="form-control border-0 shadow" />
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label class="ms-2">Author</label>
                        <input asp-for="Author" class="form-control border-0 shadow" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label class="ms-2">ListPrice</label>
                        <input asp-for="ListPrice" class="form-control border-0 shadow" />
                        <span asp-validation-for="ListPrice" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label class="ms-2">Price for less than 50</label>
                        <input asp-for="Price" class="form-control border-0 shadow" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label class="ms-2">Author</label>
                        <input asp-for="Price50" class="form-control border-0 shadow" />
                        <span asp-validation-for="Price50" class="text-danger"></span>
                    </div>
                    <div class="py-2 col-12">
                        <label class="ms-2">Author</label>
                        <input asp-for="Price100" class="form-control border-0 shadow" />
                        <span asp-validation-for="Price100" class="text-danger"></span>
                    </div>
                    <div class="row mt-3">
                        <div class="col-6 col-md-3 ">
                            <button type="submit" class="btn btn-primary form-control">
                                Create
                            </button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to category</a>
                        </div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="row mt-2 "></div>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" /> 
    }
}
